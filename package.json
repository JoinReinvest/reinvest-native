{
  "name": "reinvestnative",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint",
    "start": "react-native start",
    "test": "jest",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock && yarn",
    "nuke": "bash scripts/react-native-nuke.sh"
  },
  "dependencies": {
    "@aws-amplify/auth": "5.1.10",
    "@aws-amplify/core": "5.0.16",
    "@hookform/resolvers": "2.9.11",
    "@react-native-async-storage/async-storage": "1.17.11",
    "@react-native-community/netinfo": "9.3.7",
    "@react-navigation/bottom-tabs": "6.5.7",
    "@react-navigation/native": "6.1.6",
    "@react-navigation/native-stack": "6.9.12",
    "@tanstack/react-query": "4.26.1",
    "amazon-cognito-identity-js": "6.1.2",
    "graphql": "16.6.0",
    "graphql-request": "5.0.0",
    "lint-staged": "13.1.2",
    "react": "18.2.0",
    "react-hook-form": "7.43.5",
    "react-native": "0.71.3",
    "react-native-avoid-softinput": "^3.1.5",
    "react-native-fast-image": "^8.6.3",
    "react-native-image-picker": "5.1.0",
    "react-native-linear-gradient": "^2.6.2",
    "react-native-mask-input": "1.2.3",
    "react-native-reanimated": "3.0.2",
    "react-native-responsive-screen": "1.4.2",
    "react-native-safe-area-context": "4.5.0",
    "react-native-screens": "3.20.0",
    "react-native-svg": "13.8.0",
    "react-native-video": "5.2.1",
    "react-native-webview": "^11.26.1",
    "reinvest-app-common": "git+ssh://git@github.com:JoinReinvest/reinvest-fe-common.git#main"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/runtime": "7.20.0",
    "@react-native-community/eslint-config": "3.2.0",
    "@tsconfig/react-native": "2.0.2",
    "@types/jest": "29.2.1",
    "@types/react": "18.0.24",
    "@types/react-native-video": "5.0.14",
    "@types/react-test-renderer": "18.0.0",
    "babel-jest": "29.2.1",
    "babel-plugin-module-resolver": "5.0.0",
    "eslint": "8.19.0",
    "eslint-plugin-jest": "27.2.1",
    "husky": "8.0.3",
    "jest": "29.2.1",
    "metro-react-native-babel-preset": "0.73.7",
    "prettier": "2.4.1",
    "react-native-dotenv": "3.4.8",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native(-.*)?|@react-native(-community)?)/)"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint --cache"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run pre-commit"
    }
  }
}
